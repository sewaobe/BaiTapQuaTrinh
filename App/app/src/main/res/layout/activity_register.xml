<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#00BCD4">

    <!-- Phần tiêu đề và hình minh họa -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="176dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="161dp"
            android:layout_height="170dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical|start"
            android:text="Here's your first step with us!"
            android:textColor="@android:color/white"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_login_hero" />
    </LinearLayout>
    <!-- Phần form đăng ký -->
    <LinearLayout
        android:layout_width="376dp"
        android:layout_height="413dp"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:background="@android:color/white"
        android:clipToOutline="true"
        android:elevation="4dp"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="Enter your name"
            android:paddingBottom="4dp"
            android:text="kapil"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Email"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="Enter your email"
            android:inputType="textEmailAddress"
            android:paddingBottom="4dp"
            android:text="example@email.com"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Mobile"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="Enter your mobile number"
            android:inputType="phone"
            android:paddingBottom="8dp"
            android:text="8129****"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Password"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@null"
            android:hint="Enter your password"
            android:inputType="textPassword"
            android:paddingBottom="8dp"
            android:text="****************"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/holo_blue_dark" />

        <FrameLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:background="@android:color/transparent"
                android:contentDescription="Login Button"
                android:padding="10dp"
                android:src="@drawable/button_background_blue" />

            <TextView
                android:id="@+id/btnRegister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Register"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </FrameLayout>

    </LinearLayout>

    <!-- Phần đăng nhập bằng phương thức khác -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="126dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Use other Methods"
                android:textColor="#FFFCFC"
                android:textSize="14sp"
                android:textStyle="bold" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="#FFFFFF" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="16dp"
                android:background="@null"
                android:contentDescription="Back Button"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_back_img" />

            <!-- Khoảng trống để đẩy Facebook + Google vào giữa -->
            <View
                android:layout_width="24dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.35" />

            <!-- Các nút Facebook + Google (ở giữa) -->
            <ImageButton
                android:id="@+id/btn_facebook"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="16dp"
                android:background="@null"
                android:contentDescription="Facebook Button"
                android:src="@drawable/ic_facebook" />

            <!-- Nút Google -->
            <ImageButton
                android:id="@+id/btn_google"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@null"
                android:contentDescription="Google Button"
                android:src="@drawable/ic_google_plus" />

            <!-- Khoảng trống lớn để căn giữa -->
            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

    </LinearLayout>

    <!-- Nút Back -->


</LinearLayout>
